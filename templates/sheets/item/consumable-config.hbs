<section class="tab sheet-body standard-form scrollable {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">
    <fieldset {{fieldDisabled}}>
        <legend>{{localize "ITEM.SHEET.TYPE"}}</legend>
        {{formGroup fields.identifier value=source.system.identifier}}
        {{formGroup fields.category value=source.system.category}}
        {{formGroup fields.quality value=source.system.quality}}
        {{formGroup fields.enchantment value=source.system.enchantment}}
    </fieldset>

    <fieldset class="item-properties" {{fieldDisabled}}>
        <legend>{{fields.properties.label}}</legend>
        {{formGroup fields.properties value=item.system.properties widget=propertiesWidget}}
    </fieldset>

    <fieldset class="item-equipment" {{fieldDisabled}}>
        <legend>{{localize "ITEM.SHEET.EQUIPMENT"}}</legend>
        <div class="form-group slim double">
            <label>Uses</label>
            <div class="form-fields">
                {{formInput fields.uses.fields.value value=source.system.uses.value}}
                <label>of</label>
                {{formInput fields.uses.fields.max value=source.system.uses.max}}
            </div>
        </div>
        {{formGroup fields.equipped value=source.system.equipped}}
        {{formGroup fields.broken value=source.system.broken}}
        {{formGroup fields.quantity value=source.system.quantity classes="slim"}}
        {{formGroup fields.weight value=source.system.weight classes="slim"}}
        {{formGroup fields.price value=source.system.price input=currencyInput classes="currency double"}}
        {{formGroup scaledPriceField value=item.system.price input=currencyInput classes="currency double" readonly=true disabled=true}}
        {{#if requiresInvestment}}{{formGroup fields.invested value=source.system.invested}}{{/if}}
    </fieldset>
</section>
