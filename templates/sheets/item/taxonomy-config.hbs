<section class="tab sheet-body standard-form scrollable {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">

    <fieldset class="form-group physical">
        <legend>Physiology</legend>
        {{formGroup fields.category value=source.system.category hint=null}}
        {{formGroup fields.movement.fields.size value=source.system.movement.size classes="slim"}}
        {{formGroup fields.movement.fields.stride value=source.system.movement.stride classes="slim"}}
        {{formGroup fields.characteristics.fields.equipment value=source.system.characteristics.equipment}}
        {{formGroup fields.characteristics.fields.spells value=source.system.characteristics.spells}}
    </fieldset>

    <fieldset class="form-group abilities">
        <legend>{{fields.abilities.label}} <span class="sum"></span></legend>
        <div class="form-fields">
            {{#each abilities as |a|}}
            <label>
                {{formInput a.field value=a.value type="number"}}
                {{a.label}}
            </label>
            {{/each}}
        </div>
        <p class="hint">{{fields.abilities.hint}}</p>
    </fieldset>

    <fieldset class="form-group resistances">
        <legend>{{fields.resistances.label}} <span class="sum"></span></legend>
        <div class="form-fields">
            {{#each resistances as |r|}}
            <label>
                {{formInput r.field value=r.value type="number"}}
                {{r.label}}
            </label>
            {{/each}}
        </div>
        <p class="hint">{{fields.resistances.hint}}</p>
    </fieldset>
</section>
