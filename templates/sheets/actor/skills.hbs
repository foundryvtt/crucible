<section class="tab secondary {{tabs.skills.id}} scrollable flexcol {{tabs.skills.cssClass}}"
         data-tab="{{tabs.skills.id}}" data-group="{{tabs.skills.group}}">
    {{#each skillCategories as |category catId|}}
    <div class="sheet-section item-section flexcol">
        <h3 class="section-header">{{category.label}} Skills</h3>
        <ol class="items-list" style="--skill-color:{{category.color.css}}" data-tooltip-direction="LEFT">
            {{#each category.skills as |skill skillId|}}
            <li class="skill line-item" data-skill="{{skillId}}" data-uuid="{{@root.actor.uuid}}" data-crucible-tooltip="skill" data-tooltip-class="crucible crucible-tooltip">
                <img class="icon" src="{{skill.icon}}" alt="{{skill.label}}">
                <div class="title">
                    <h4 data-action="skillRoll"><a>{{skill.label}}</a></h4>
                </div>
                <div class="tags abilities">
                    {{#each skill.abilityAbbrs}}
                    <span class="attribute tag">{{this}}</span>
                    {{/each}}
                </div>
                <div class="bonus flexrow">
                    <span class="value hex {{skill.hexClass}}" data-tooltip="{{skill.tooltips.value}}">{{numberFormat skill.score sign=true}}</span>
                    <span class="passive" data-tooltip="Passive: {{skill.tooltips.passive}}">{{skill.passive}}</span>
                </div>
                <div class="ranks flexrow">
                    {{#each skill.pips}}<span class="pip {{this}}"></span>{{/each}}
                </div>
                <div class="tags training">
                    {{#each skill.rankTags as |tag|}}
                    <span class="rank tag">{{tag}}</span>
                    {{/each}}
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
    {{/each}}
    <div class="sheet-section multiselect-section flexcol">
        <h3>{{localize "ACTOR.LABELS.KNOWLEDGE"}}</h3>
        <div class="tags flexrow">
            {{#each knowledge}}
            <span class="larger tag knowledge-area">{{this}}</span>
            {{else}}
            <p class="hint">{{localize "ACTOR.LABELS.KNOWLEDGE_HINT"}}</p>
            {{/each}}
        </div>
    </div>
    <div class="sheet-section multiselect-section flexcol">
        <h3>{{localize "ACTOR.LABELS.LANGUAGES"}}</h3>
        {{formGroup fields.details.fields.languages value=source.system.details.languages options=languages}}
    </div>
</section>
