<section class="sheet-header flexcol">
    <header class="title flexrow">
        <input class="charname" name="name" type="text" value="{{source.name}}" placeholder="Actor Name">
        <div class="advancement flexrow" data-tooltip="{{advancementTooltip}}" data-tooltip-direction="UP">
            {{#if incomplete.progress}}
            <button type="button" class="icon level-up fa-solid fa-triangle-exclamation incomplete"
                    data-tooltip-html="{{incomplete.progressTooltip}}" data-tooltip-direction="DOWN"
                    data-tooltip-class="crucible crucible-tooltip incomplete"></button>
            {{else if incomplete.level}}
            <button type="button" class="icon level-up fa-solid fa-plus incomplete" data-action="levelUp"
                    aria-label="{{localize "ACTOR.ACTIONS.LevelUp"}}" data-tooltip></button>
            {{/if}}
            <span>{{localize "ADVANCEMENT.Level"}}</span>
            <div class="milestones">
                {{#if actor.system.advancement.progress}}
                <span class="bar" style="width: {{actor.system.advancement.pct}}%"></span>
                {{/if}}
            </div>
        </div>
        {{formInput fields.advancement.fields.level value=source.system.advancement.level type="number" classes="level"
                    disabled=incomplete.isL0}}
    </header>

    <div class="subtitle flexrow">
        <h2 class="ancestry flexrow {{#if incomplete.ancestry}}incomplete{{/if}}" data-action="editAncestry"
            {{#if incomplete.ancestry}}aria-label="{{localize "WALKTHROUGH.AddAncestry"}}" data-tooltip{{/if}}>
            <a>{{#if incomplete.ancestry}}<i class="fa-solid fa-circle-plus"></i> {{/if}}{{ancestryName}}</a>
        </h2>
        <h2 class="background flexrow {{#if incomplete.background}}incomplete{{/if}}" data-action="editBackground"
            {{#if incomplete.background}}aria-label="{{localize "WALKTHROUGH.AddBackground"}}" data-tooltip{{/if}}>
            <a>{{#if incomplete.background}}<i class="fa-solid fa-circle-plus"></i> {{/if}}{{backgroundName}}</a>
        </h2>
        {{#if actor.system.details.signatureName}}
        <h2 class="signature">{{actor.system.details.signatureName}}</h2>
        {{/if}}
        <div class="metadata flexrow">
            <div class="size flexrow">
                <span class="label" data-tooltip="ANCESTRY.FIELDS.movement.size.hint">{{localize "ANCESTRY.FIELDS.movement.size.label"}}</span>
                <span role="button" tabindex="0" class="hex" data-action="editSize" aria-label="Edit Size: {{actor.size}}">{{actor.size}}</span>
            </div>
        </div>
    </div>
</section>
