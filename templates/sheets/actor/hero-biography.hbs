<section class="tab flexcol {{tabs.biography.id}} {{tabs.biography.cssClass}}" data-tab="{{tabs.biography.id}}"
         data-group="{{tabs.biography.group}}" data-tooltip-direction="UP">
    <div class="sheet-section flexrow expandable {{biography.appearanceClass}}">
        <h3 data-action="expandSection" data-tooltip="{{biography.appearanceField.hint}}">
            {{biography.appearanceField.label}}
            <i class="fa-solid fa-chevron-right" inert></i>
        </h3>
        {{formInput biography.appearanceField value=biography.appearanceSrc enriched=biography.appearanceHTML toggled=true}}
        <fieldset class="standard-form">
            <legend>{{localize "ACTOR.Details"}}</legend>
            {{formGroup fields.details.fields.biography.fields.pronouns value=source.system.details.biography.pronouns}}
            {{formGroup fields.details.fields.biography.fields.age value=source.system.details.biography.age
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.height value=source.system.details.biography.height
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.weight value=source.system.details.biography.weight
                        classes="slim"}}
        </fieldset>
    </div>
    <div class="sheet-section flexcol expandable {{biography.publicClass}}">
        <h3 data-action="expandSection" data-tooltip="{{biography.publicField.hint}}">
            {{biography.publicField.label}}
            <i class="fa-solid fa-chevron-right" inert></i>
        </h3>
        {{formInput biography.publicField value=biography.publicSrc enriched=biography.publicHTML toggled=true}}
    </div>
    <div class="sheet-section flexcol expandable {{biography.privateClass}}">
        <h3 data-action="expandSection" data-tooltip="{{biography.privateField.hint}}">
            {{biography.privateField.label}}
            <i class="fa-solid fa-chevron-right" inert></i>
        </h3>
        {{formInput biography.privateField value=biography.privateSrc enriched=biography.privateHTML toggled=true}}
    </div>
</section>
