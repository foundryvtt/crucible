<div id="crucible-talent-controls" class="crucible-new flexrow">
    <nav class="flexrow hud">
        <div class="points flexrow">
            <span class="input">{{actor.points.talent.available}}</span>
            <span>{{localize "TALENT.PointsAvailable"}}</span>
        </div>
        <header class="name flexrow">
            <h2 class="charname">{{actor.name}}</h2>
            <span class="level">({{localize "ACTOR.Level"}} {{actor.level}})</span>
        </header>
        <div class="controls flexrow">
            <button type="button" class="reset frame-brown">
                <i class="fa-solid fa-undo"></i>
                <label>{{localize "Reset"}}</label>
            </button>
            <button type="button" class="close frame-brown">
                <i class="fa-solid fa-times"></i>
                <label>{{localize "Close"}}</label>
            </button>
        </div>
    </nav>
</div>
